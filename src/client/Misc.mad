import Char from "Char"
import IO from "IO"
import String from "String"


saveCursor :: {} -> {}
export saveCursor = () => IO.put(String.fromList([Char.fromShort(27), '7']))

restoreCursor :: {} -> {}
export restoreCursor = () => IO.put(String.fromList([Char.fromShort(27), '8']))

eraseAfterCursor :: {} -> {}
export eraseAfterCursor = () => IO.put("\x1b[0J")
